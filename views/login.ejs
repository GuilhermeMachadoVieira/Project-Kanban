<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page Rabitez</title>
    <link rel="stylesheet" href="../css/login.css">
    <link rel="shortcut icon" href="../images/lotus.png" type="image/x-icon">
</head>
<body>
    <div class="container">
        <div class="left-side">
            <div class="header">
                <img src="../images/lotus.png" alt="Logo" class="logo">
                <h1>Rabitez</h1>
            </div>
        </div>
        <div class="right-side">
            <div class="login-container">
                <h2>Login</h2>
                <% if (error) { %>
                    <div id="error-message" style="color: red; display: block;">Credenciais inv√°lidas. Por favor, tente novamente.</div>
                <% } %>
                <form action="/login" method="POST">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" required>
                    
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" required>
                    
                    <button type="submit">Login</button>
                </form>
                <p>Don't have an account? <a href="register">Register</a></p>
            </div>
        </div>
    </div>
    <script>
        const urlParams = new URLSearchParams(window.location.search);
        const errorMessage = urlParams.get('error');
        if (errorMessage === 'invalid_credentials') {
            document.getElementById('error-message').style.display = 'block';
        }
    </script>
</body>
</html>
